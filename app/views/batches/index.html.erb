<h1>Listing batches</h1>

<table cellpadding="0" cellspacing="0" border="0" class="display" id="example"> 
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Style</th>
    <th>Brew date</th>
    <th>Rack date</th>
    <th>Bottle date</th>
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @batches.each do |batch| %>
  <tr>
    <td><%= batch.name %></td>
    <td><%= batch.user_id %></td>
    <td><%= batch.style_id %></td>
    <td><%= batch.brew_date %></td>
    <td><%= batch.rack_date %></td>
    <td><%= batch.bottle_date %></td>
    <td><%= batch.comments %></td>
    <td><%= link_to 'Show', batch %></td>
    <td><%= link_to 'Edit', edit_batch_path(batch) %></td>
    <td><%= link_to 'Destroy', batch, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

